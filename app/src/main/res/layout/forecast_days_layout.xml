<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/dayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Monday"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/conditionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/dayText"
        android:layout_below="@+id/dayText"
        android:textStyle="italic"
        android:text="Cloudy"
        android:padding="10dp"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/conditionImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/maxTempText" />

    <TextView
        android:id="@+id/maxTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/dayText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="10"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="14dp"
        android:padding="10dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/minTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/conditionText"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/maxTempText"
        android:layout_alignParentRight="true"

        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="10"
        android:padding="10dp"
        android:textSize="14sp" />

</RelativeLayout>