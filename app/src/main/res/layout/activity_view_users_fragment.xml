<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/friendsListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filterTextView"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"></ListView>

    <Spinner
        android:id="@+id/selectedCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:padding="10dip"></Spinner>

    <TextView
        android:id="@+id/filterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:text="Filter by Country"
        android:textColor="@color/darkblue"
        android:textSize="16dip"
        android:textStyle="bold"></TextView>

</RelativeLayout>

